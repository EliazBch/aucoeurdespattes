<div class="register-container">
    <div class="register-container-block">
        <img class="img-register" width="280" height="400" src="/final-project/public/assets/front/img/wolf-font.jpg" alt="image chat pour inscription">
        <div class="register-form">
            <h1>Inscription</h1>
            <div id="error-container" style="color: red;"></div>
            <form class="user-register" action="#" method="post">
                <input type="name" name="name" class="name-form" id="input-name" placeholder="Nom">
                <input type="email" name="email" class="email-form" id="input-email" placeholder="Email">
                <input type="password" name="password" class="pass-form" id="input-password" placeholder="Mot de passe">
                <input type="submit" name="registerForm" class="register-btn" value="Register">
            </form>
        </div>
    </div>
</div>

<script>
    function validateForm() {
        document.getElementById("error-container").innerHTML = '';
        
        var name = document.getElementById("input-name").value;
        var email = document.getElementById("input-email").value;
        var password = document.getElementById("input-password").value;

        var errors = [];

        if (name === '') {
            errors.push("Le champ 'Nom' est obligatoire.");
        }

        if (email === '') {
            errors.push("Le champ 'Email' est obligatoire.");
        } else if (!isValidEmail(email)) {
            errors.push("Le format de l'email n'est pas valide.");
        }

        if (password === '') {
            errors.push("Le champ 'Mot de passe' est obligatoire.");
        } else if (password.length < 8) {
            errors.push("Le mot de passe doit contenir au moins 8 caractÃ¨res.");
        }

        if (errors.length > 0) {
            var errorContainer = document.getElementById("error-container");
            for (var i = 0; i < errors.length; i++) {
                errorContainer.innerHTML += errors[i] + '<br>';
            }
            return false; 
        }

        return true; 
    }

    function isValidEmail(email) {
        return email.includes('@');
    }
</script>